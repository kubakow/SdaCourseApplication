<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rent.myapplication">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".drawingPackage.MainDrawingActivity">
        </activity>
        <activity android:name=".galleryPackage.GalleryActivity"/>
        <activity android:name=".toDoPackage.ToDoListActivity"/>
        <activity android:name=".quizPackage.QuizActivity"/>
        <activity android:name=".books.BooksActivity"/>
    </application>

</manifest>