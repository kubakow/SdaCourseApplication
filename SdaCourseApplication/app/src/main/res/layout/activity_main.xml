<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_from_left">

<RelativeLayout
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rent.myapplication.MainActivity">

    <TextView
        android:id="@+id/my_notes_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="My Notes: " />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:lines="8"
        android:id="@+id/my_note_edittext"/>

    <Button
        android:layout_below="@id/my_note_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save note"
        android:id="@+id/save_note_button"/>
</RelativeLayout>

 <LinearLayout
     android:background="@android:color/holo_orange_light"
     android:layout_gravity="start"
     android:orientation="vertical"
     android:layout_width="200dp"
     android:layout_height="match_parent">

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/rysowanie"
         android:background="?attr/selectableItemBackground"
         android:paddingBottom="10dp"
         android:paddingTop="10dp"
         android:text="@string/paint"
         android:textStyle="italic"/>

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingBottom="10dp"
         android:paddingTop="10dp"
         android:id="@+id/polish_flag"
         android:text="@string/flag"/>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingBottom="10dp"
         android:paddingTop="10dp"
         android:id="@+id/to_do_list_link"
         android:text="@string/to_do_list"/>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingBottom="10dp"
         android:paddingTop="10dp"
         android:id="@+id/quiz_app_link"
         android:text="QUIZ"/>


     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingBottom="10dp"
         android:paddingTop="10dp"
         android:id="@+id/books_app_link"
         android:text="BOOKS"/>


 </LinearLayout>
</android.support.v4.widget.DrawerLayout>